<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlowTimer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FlowTimer.Views.TimerView"
             x:DataType="vm:TimerViewModel">
    <TextBlock>
        <TextBlock.Text>
            <MultiBinding StringFormat="The time is {0} hours {1} minutes {2} seconds">
                <Binding Path="Timer.Hours" />
                <Binding Path="Timer.Minutes" />
                <Binding Path="Timer.Seconds" />
            </MultiBinding>
        </TextBlock.Text>
    </TextBlock>
</UserControl>